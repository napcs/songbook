<h1>Songs</h1>

<% if @songs.any? %>
  <table>
    <% @songs.each do |song| %>
        <td><%= link_to song.name, song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure you want to delete this song?' } %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>You don't have any songs yet. You should add some.</p>
<% end %>

<br>

<%= link_to 'Add Song', new_song_path %>
